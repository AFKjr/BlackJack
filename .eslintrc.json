{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "brace-style": ["error", "allman", { "allowSingleLine": false }],
    "curly": ["error", "all"],
    "space-before-blocks": ["error", "always"],
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"]
    ,
    "no-restricted-syntax": [
      "error",
      {
        "selector": "AssignmentExpression[left.property.name='innerHTML']",
        "message": "Do not assign to innerHTML; use textContent, replaceChildren(), or DOM-safe generation to avoid XSS."
      },
      {
        "selector": "MemberExpression[property.name='innerHTML']",
        "message": "Avoid using innerHTML; prefer DOM APIs or textContent for text nodes."
      }
    ]
  }
}
